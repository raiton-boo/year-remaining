---
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = 'Year Remaining',
  description = '今年があとどれくらい残っているかを可視化するサイト',
  ogImage = '/ogp-image.svg',
} = Astro.props;

const base = import.meta.env.BASE_URL || '/';
const asset = (path: string) => {
  const cleaned = path.replace(/^\//, '');
  if (Astro.site) {
    return new URL(cleaned, new URL(base, Astro.site)).toString();
  }
  return base.replace(/\/$/, '/') + cleaned;
};

const faviconHref = asset('/favicon.svg');
const ogImageHref = asset(ogImage);
---
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#faf8f5" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={faviconHref} />

    <!-- OGP -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImageHref} />
    <meta property="og:locale" content="ja_JP" />
    <!-- <meta property="og:url" content="https://example.com/year-remaining/" /> -->

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageHref} />
    <meta name="twitter:creator" content="@raiton-boo" />

    <!-- Google Fonts: Inter & JetBrains Mono -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500;600&display=swap"
    />

    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-[#faf8f5] text-[#1f2937]">
    <slot />
  </body>
</html>