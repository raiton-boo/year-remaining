---
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = '今年があとどれくらい残っているかを見るするサイト',
  ogImage = '/ogp-image.svg',
} = Astro.props;

const base = import.meta.env.BASE_URL;
const asset = (path: string) => {
  // path の先頭のスラッシュを除去してから結合
  const cleanedPath = path.replace(/^\//, '');
  const joined = `${base}${cleanedPath}`;
  // 万が一 // が発生しても 1つの / に置換
  return joined.replace(/\/+/g, '/');
};

const faviconHref = asset('/favicon.png');
const ogImageHref = asset(ogImage);
---
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#eef1f7" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href={faviconHref} />
    <link rel="shortcut icon" href={faviconHref} />
    <link rel="apple-touch-icon" href={faviconHref} />

    <!-- OGP -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImageHref} />
    <meta property="og:locale" content="ja_JP" />
    <!-- <meta property="og:url" content="https://example.com/year-remaining/" /> -->

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageHref} />
    <meta name="twitter:creator" content="@raiton-boo" />

    <!-- Google Fonts: Inter & JetBrains Mono -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=DotGothic16&family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500;600&display=swap"
    />

    <title>{title}</title>
  </head>
  <body
    class="min-h-screen text-[#1f2937]"
    style="
      background: linear-gradient(180deg, #f2f4f9 0%, #eef1f7 45%, #e9edf5 100%);
    "
  >
    <slot />
  </body>
</html>