---
import '@/styles/global.css';
interface Props {
  title?: string;
  description?: string;
}
const { title = 'Year Remaining', description = '今年があとどれくらい残っているかを可視化するサイト' } = Astro.props;
---
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Google Fonts: Inter & JetBrains Mono -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500;600&display=swap"
    />

    <!-- OGP / Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/ogp-image.svg" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="ja_JP" />
  </head>
  <body class="min-h-screen bg-[#faf8f5] text-[#1f2937]">
    <slot />
  </body>
</html>